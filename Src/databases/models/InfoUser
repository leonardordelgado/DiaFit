import { Model } from 'sequelize';
import * as sequelize from 'sequelize';
import db from './index'

class InfoUser extends Model {
    declare id: number
    declare Apelido: string
    declare Genero: string
    declare Altura: string
    declare Peso: string
    declare Idade: string
}

InfoUser.init({
      id: {
        allowNull: false,
        autoIncrement: true,
        primaryKey: true,
        type: sequelize.STRING,
      },
      Apelido: {
        type: sequelize.STRING,
        allowNull: false,
      },
      Genero:{
        type: sequelize.STRING,
        allowNull: false,
      },
      Altura:{
        type: sequelize.STRING,
        allowNull: false,
      },
      Peso:{
        type: sequelize.STRING,
        allowNull: false,
      },
      Idade:{
        type: sequelize.STRING,
        allowNull: false,
      }
}, {
    sequelize: db,
    tableName: 'InfoUser',
    timestamps: false
}
)
export default InfoUser;
